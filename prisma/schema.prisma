// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["mindra"]
}

/* =========================
   APP TABLES (Mindra)
   ========================= */

model UserProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  displayName String?
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("mindra")
}

model ChatSession {
  id        String   @id @default(uuid())
  userId    String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages  Message[]

  @@schema("mindra")
}

model Message {
  id        String   @id @default(uuid())
  sessionId String
  role      String
  content   String
  audioUrl  String?
  createdAt DateTime @default(now())

  ChatSession ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@schema("mindra")
}

model Subscription {
  userId             String   @id
  stripeCustomer     String?  @unique
  stripeSubscription String?  @unique

  plan               Plan     @default(FREE)
  term               String?
  status             String?

  currentPeriodEnd   DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("mindra")
}

model Entitlement {
  userId             String   @id
  plus               Boolean  @default(false)
  pro                Boolean  @default(false)
  tts                Boolean  @default(false)

  voiceSecondsTotal  Int      @default(0)
  voiceSecondsUsed   Int      @default(0)

  voicePeriodStart   DateTime?
  voicePeriodEnd     DateTime?

  dailyLimitEnabled  Boolean  @default(true)
  dailyLimitSeconds  Int      @default(0)
  dailySecondsUsed   Int      @default(0)
  dailyUsedAtDate    String   @default("")

  maxFaceTimeMinutes Int      @default(0)

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  voiceLedger        VoiceLedger[]
  billingEvents      BillingEvent[]

  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("mindra")
}


enum Plan {
  FREE
  PLUS
  PRO

  @@schema("mindra")
}

enum VoiceUsageType {
  TTS_CHAT
  FACE_CALL

  @@schema("mindra")
}

enum BillingEventType {
  SUBSCRIPTION_RENEW
  SUBSCRIPTION_CHANGE
  TOPUP
  MANUAL_ADJUST

  @@schema("mindra")
}

/* =========================
   NEXTAUTH TABLES (PrismaAdapter)
   ========================= */

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]

  subscription  Subscription?
  entitlement   Entitlement?
  profile       UserProfile?
  settings      UserSettings?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@schema("mindra")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@schema("mindra")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@schema("mindra")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@schema("mindra")
}

model Reminder {
  id        BigInt   @id @default(autoincrement())
  userId    String
  text      String
  dueUtc    DateTime @map("due_utc")
  snoozeUntilUtc DateTime? @map("snooze_until_utc")
  status    String   @default("scheduled") // scheduled|sent|canceled
  urgent    Boolean  @default(false)
  sentAt    DateTime? @map("sent_at")
  createdAt DateTime  @default(now()) @map("created_at")

  @@index([userId, status, dueUtc])
  @@map("reminders")
  @@schema("mindra")
}

model UserSettings {
  userId         String @id

  lang           String  @default("en") @map("lang")
  lastMorningNudgeAtUtc DateTime? @map("last_morning_nudge_at_utc")
  lastEveningNudgeAtUtc DateTime? @map("last_evening_nudge_at_utc")
  
  nudgesDisabled Boolean @default(false) @map("nudges_disabled")
  
  lastDayNudgeAtUtc DateTime? @map("last_day_nudge_at_utc")


  lastActiveAtUtc DateTime? @map("last_active_at_utc")

  tz             String @default("UTC")
  quietEnabled   Boolean @default(true) @map("quiet_enabled") 
  quietStart     Int    @default(22) @map("quiet_start")
  quietEnd       Int    @default(8)  @map("quiet_end")
  quietBypassMin Int    @default(30) @map("quiet_bypass_min")

  notifyInApp    Boolean @default(true)  @map("notify_inapp")
  notifyPush     Boolean @default(true)  @map("notify_push")
  notifyEmail    Boolean @default(false) @map("notify_email")
  notifyTelegram Boolean @default(false) @map("notify_telegram")

  pauseAll       Boolean @default(false) @map("pause_all")
  updatedAt      DateTime @updatedAt @map("updated_at")

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
  @@schema("mindra")
}

model Feedback {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  rating    Int
  text      String
  locale    String?
  userId    String?

  @@map("feedback")
  @@schema("mindra")
}


model Notification {
  id        BigInt   @id @default(autoincrement())
  userId    String
  type      String   @default("reminder") // reminder|system|promo
  title     String?
  body      String
  data      Json?
  createdAt DateTime @default(now())
  readAt    DateTime?

  @@index([userId, readAt, createdAt])
  @@map("notifications")
  @@schema("mindra")
}

model PushSubscription {
  id        BigInt   @id @default(autoincrement())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
  @@map("push_subscriptions")
  @@schema("mindra")
}

model PendingSubscriptionClaim {
  id               String   @id @default(uuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // кто оплатил (из Stripe Checkout)
  email            String
  emailNorm        String

  // guest uid из браузера (если был)
  anonUid          String?

  // stripe refs
  stripeCustomer   String?
  stripeSessionId  String?  @unique
  stripeSubId      String?

  // what bought
  plan             Plan     @default(FREE)
  term             String?
  status           String?  // active|trialing|past_due|incomplete|...

  // привязка
  claimedUserId    String?
  claimedAt        DateTime?

  // защита от повторов
  consumed         Boolean  @default(false)

  @@index([emailNorm])
  @@index([email])
  @@index([anonUid])
  @@index([stripeCustomer])
  @@index([stripeSubId])
  @@schema("mindra")
}

model DeliveryLog {
  id          BigInt   @id @default(autoincrement())
  userId      String
  reminderId  BigInt?
  channel     String   // inapp|push|email|telegram
  status      String   // ok|fail|skipped
  error       String?
  meta        Json?
  createdAt   DateTime @default(now())

  @@index([userId, channel, createdAt])
  @@index([reminderId, createdAt])
  @@map("delivery_logs")
  @@schema("mindra")
}

model VoiceLedger {
  id        String   @id @default(uuid())
  userId    String
  type      VoiceUsageType
  seconds   Int
  sessionId String?
  meta      Json?
  createdAt DateTime @default(now())

  entitlement Entitlement @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId, createdAt])
  @@schema("mindra")
}

model BillingEvent {
  id            String           @id @default(uuid())
  userId        String
  type          BillingEventType
  planFrom      Plan?
  planTo        Plan?
  secondsAdded  Int              @default(0)
  amountCents   Int              @default(0)
  currency      String           @default("usd")
  stripeEventId String?          @unique
  meta          Json?
  createdAt     DateTime         @default(now())

  entitlement   Entitlement @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId, createdAt])
  @@schema("mindra")
}
